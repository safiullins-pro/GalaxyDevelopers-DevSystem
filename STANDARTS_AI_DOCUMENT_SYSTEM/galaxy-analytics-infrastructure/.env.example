# =====================================================
# БАЗОВЫЕ НАСТРОЙКИ
# =====================================================
NODE_ENV=development
APP_NAME=galaxy-analytics
APP_PORT=4000
APP_HOST=0.0.0.0

# =====================================================
# БАЗЫ ДАННЫХ
# =====================================================

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=galaxy_admin
POSTGRES_PASSWORD=galaxy_secure_pass_2024
POSTGRES_DB=galaxy_analytics
DATABASE_URL=postgresql://galaxy_admin:galaxy_secure_pass_2024@localhost:5432/galaxy_analytics

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=galaxy_redis_secure_2024
REDIS_URL=redis://:galaxy_redis_secure_2024@localhost:6379

# ChromaDB
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_TOKEN=wb_chroma_token_2024

# MinIO
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=wb_minio_admin
MINIO_SECRET_KEY=wb_minio_secure_2024
MINIO_USE_SSL=false

# =====================================================
# MESSAGE QUEUES
# =====================================================

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=wb_rabbit
RABBITMQ_PASSWORD=wb_rabbit_2024
RABBITMQ_VHOST=wb_analytics

# Kafka
KAFKA_BROKERS=localhost:29092
KAFKA_CLIENT_ID=wb-analytics-client
KAFKA_GROUP_ID=wb-analytics-group

# =====================================================
# МОНИТОРИНГ
# =====================================================

# Grafana
GRAFANA_URL=http://localhost:3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=wb_grafana_2024

# Prometheus
PROMETHEUS_URL=http://localhost:9090

# Loki
LOKI_URL=http://localhost:3100

# =====================================================
# ВНЕШНИЕ СЕРВИСЫ
# =====================================================

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here

# GitHub
GITHUB_TOKEN=your_github_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# Slack
SLACK_BOT_TOKEN=your_slack_bot_token_here
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# =====================================================
# БЕЗОПАСНОСТЬ
# =====================================================

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_2024
JWT_EXPIRES_IN=7d

# Encryption
ENCRYPTION_KEY=your_32_char_encryption_key_here_2024
ENCRYPTION_ALGORITHM=aes-256-gcm

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# =====================================================
# ЛОГИРОВАНИЕ
# =====================================================
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_OUTPUT=stdout,file
LOG_FILE_PATH=/var/log/wb-analytics/app.log

# =====================================================
# АГЕНТЫ
# =====================================================
AGENT_MAX_MEMORY=512MB
AGENT_TIMEOUT=30000
AGENT_RETRY_ATTEMPTS=3
AGENT_RETRY_DELAY=5000